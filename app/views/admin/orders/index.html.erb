<div class="page_title offset-1 my-3">注文履歴一覧</div>
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.address_name %>
      </td>
      <td class="align-middle">
        <% order.order_products.each do |order_product| %>
          <%= order_product.product.name %><br>
        <% end %>
      </td>
      <td class="align-middle"><%= order.total_price.to_s(:delimited) %>円</td>
      <td class="align-middle"><%= order.order_status %></td>
      <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary offset-2 col-7" %></td>
    </tr>
    <% end %>
  </tbody>
</table>