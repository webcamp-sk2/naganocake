<div class="page_title offset-1 my-3">注文履歴一覧</div>
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td class="align-middle">
        <% order.items.each do |item| %>
          <%= item.name %><br>
        <% end %>
      </td>
      <td class="align-middle">                円</td>
      <td class="align-middle"><%= order.status %></td>
      <td class="align-middle"><%= link_to "表示する", admin_order_path(order), class: "btn btn-sm btn-primary offset-1 col-10" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class ="offset-5"><%= paginate @orders %></div>