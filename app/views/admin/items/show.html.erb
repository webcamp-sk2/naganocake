<div class = "container" >
    <div class = "row" >
        <h4>商品詳細</h4>
         <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no_image.jpg" %>
        <div class = "col-md-8">
            <h4>商品名<%= @item.name %></h4>
            <h4>商品説明<%= @item.introduction %></h4>
            <h4>ジャンル<%= @item.genre_id %></h4>
            <h4>税込価格<%= @item.price %></h4>
            <h4>販売ステータス<%= @item.is_active %></h4>

            <%= button_to '編集する', admin_item_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>