<div class = "container">
 <div style="margin-top : 20px">
    <h2>商品一覧<i class="fas fa-clipboard-list"></i></h2>
 </div>

    <div class = "text-right index-new">
      <%= link_to new_admin_item_path do %>
       <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>

    <table class = "table table-hover">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
          <td><%= link_to "商品詳細", admin_item_path(item)%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
</div>
