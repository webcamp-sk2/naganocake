<div class = "container">

    <h2>商品一覧</h2>

    <div class = "text-right index-new">
      <%= link_to new_admin_item_path do %>
       <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>

    <table class = "table table-hover">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.id %></td>
          <td><%= item.ise_active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @items %>
</div>
