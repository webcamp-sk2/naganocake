<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-6">
            <h4>商品編集</h4>
        </div>
    </div>
    <div class"row">
        <div class="offset-md-4 col-md-7">
            <%= form_with model:@item, local:true do |f| %>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <label>商品画像</label>
                            <%= f.attachment_field :image_id, placeholder: "商品画像" %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>商品名</label>
                            <%= f.text_field :name, placeholder: "商品名" %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>商品説明</label>
                            <%= f.text_area :introduction %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>ジャンル</label>
                            <%= f.collection_select :genre_id, Genre.all.map { |jenre| [jenre.name, jenre.id] } %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>税抜価格</label>
                            <%= f.number_field :price %>円
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>販売ステータス</label>
                            <!--チェックボックス<%= f.collection_check_boxes %>-->
                        </td>
                    </tr>
                </tbody>
            </table>
            <%= f.subumit "変更を保存", class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>