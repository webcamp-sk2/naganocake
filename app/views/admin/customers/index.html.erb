<div class="container">
  <h2 class="text-center my-3">会員一覧</h2>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr class="info">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @publics.each do |public| %>
        <tr>
          <td class="info col-xs-1">
            <%= public.id %>
          </td>
          <td class="text-left">
            <%= link_to admin_customer_path(public), class: "btn-link"  do %>
              <i class="far fa-user"></i>
              <%= public.last_name %><%= public.first_name %>
            <% end %>
          </td>
          <td class="text-left">
            <%= public.email %>
          </td>
          <td class="col-xs-2">
            <% if public.is_deleted %>
              <p>退会済</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class= "text-center"><%= paginate(@publics) %></div>
</div>