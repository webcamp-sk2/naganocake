<div class="container">
  <div class="row">
    <div class='col-10 offset-1'>
      <h4 class="mt-5 bg-light col-4 text-center">ショッピングカート</h4>
      <%= link_to "カートを空にする", public_destroy_all_path, class: "my-5 offset-9 btn btn-danger" %>
      <table class='table table-hover table-bordered'>
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-2">
      <%= link_to "買い物を続ける", public_items_path, class:"btn btn-primary" %>
    </div>
    <div class="col-4 offset-2 fustify-content-end">
      <table class="table table-bordered">
        <th class="bg-light">合計金額</th>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "情報入力に進む", public_orders_path, class:"btn btn-success" %>
    </div>
  </div>
</div>