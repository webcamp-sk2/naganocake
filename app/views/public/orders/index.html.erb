 <div class="container"style="margin-top:30px;">
     <div class="row">
         <div class="col-md-4">
             <h3>注文履歴一覧</h3>
         </div>
     </div>
 </div>
 <table class="table table-hover table-bordered table-condensed" style="margin-top:30px;">
    <thead class="bg-light">
      <tr class="info">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
	          <%= order.created_at.strftime('%Y/%m/%d') %>
	        </td>
	        <td class="text-left">
	          <%= order.postal_code %><br>
	          <%= order.address %><br>
	          <%= order.name %>
	        </td>
	        <td>
	          <% order.items.each do |item| %>
	          	<%= item.name %><br>
	          <% end %>
	        </td>

	        <td class="text-right">
	          <%= order.total_payment.to_i.to_s(:delimited) %>円
	        </td>
	        <td>
	          <%= order.status %>
	        </td>
   	      <td>
 	          <%= link_to "注文詳細", public_order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-success" %>
 	        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
