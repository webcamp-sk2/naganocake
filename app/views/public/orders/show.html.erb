<div class="page_title offset-1 my-3">注文履歴詳細</div>
<div class="container">
  <div class="row">
    <table class="table table-bordered col-7">
      <caption class="text-dark" style="caption-side: top">注文情報</caption>
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.address_name %><br>
          </td>
          <td><%= @order.payment_selection %></td>
          <td><%= @order.order_status %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-bordered col-4 mx-4">
    <caption class="text-dark" style="caption-side: top">請求情報</caption>
      <thead class="thead-light">
        <tr><th>商品合計</th><td><%= @total_price.to_s(:delimited) %></td></tr>
        <tr><th>配送料</th><td><%= @order.postage.to_s(:delimited) %></td></tr>
        <tr><th>ご請求額</th><td><%= @order.total_price.to_s(:delimited) %></td></tr>
      </thead>
    </table>
  </div>
  <div class="row">
    <table class="table table-bordered col-8">
      <caption class="text-dark" style="caption-side: top">請求情報</caption>
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.product.name %></td>
          <td><%= order_product.product_price.to_s(:delimited) %></td>
          <td><%= order_product.quantity.to_s(:delimited) %></td>
          <td><%= order_subtotal(order_product).to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>