<div class="Mwnu" style="margin-top:60px">会員情報変更画面</div>
<%= render "layouts/error_massages", model: current_public %>
<%= form_with model: current_public, url: public_customer_path, class: "container", local: true do |f| %>
 <div class="row my-3">
  <%= f.label "名前", class: "col-2" %>
  <%= f.text_field :last_name, autofocus: true, class: "form-control col-4", style: "margin-right:40px;" %>
  <%= f.text_field :first_name, autofocus: true, class: "form-control col-4" %>
</div>
<div class="row my-3">
  <%= f.label "フリガナ", class: "col-2" %>
  <%= f.text_field :last_name_kana, autofocus: true, class: "form-control col-4", style: "margin-right:40px;" %>
  <%= f.text_field :first_name_kana, autofocus: true, class: "form-control col-4" %>
</div>
<div class="row my-3">
  <%= f.label :email, "メールアドレス",class: "col-2" %>
  <%= f.email_field :email, autofocus: true, class: "form-control col-4" %>
</div>
<div class="row my-3">
  <%= f.label :postal_code,'郵便番号', class: "col-2" %>
  <%= f.text_field :postal_code, autofocus: true, class: "form-control col-4", id: "user_postcode" %>
</div>
<div class="row my-3">
  <%= f.label :address,'住所', class: "col-2" %>
  <%= f.text_field :address, autofocus: true, class: "form-control col-8", id: "user_address" %>
</div>
<div class="row my-3">
  <%= f.label :telephone_number,'電話番号', class: "col-2" %>
  <%= f.text_field :telephone_number, autofocus: true, class: "form-control col-4" %>
</div>
<div class="row my-3">
  <%= f.submit "編集内容を保存" ,class: 'btn-lg btn-sm btn-success offset-2 col-3' %>
  <%= link_to "退会する", public_unsubscribe_path ,class: "btn btn-sm btn-danger offset-1 col-3"%>
</div>
<% end %>