<div class="row">
    <div class="col-lg-10 col-lg-offset-1">

    <%= form_for(customer) do |f| %>

     <table class="edit_customer">
    </div>
    <% end %>

        <tr>
        <th>名前</th>
        <td>
        <span>(姓) </span>
        </td>
        <td>
         <%= f.text_field :first_name %>
        <span>　(名)　</span>
        <%= f.text_field :last_name %>
        </td>
        </tr>

        <tr>
        <th>フリガナ</th>
        <td>
        <span> (セイ) </span>
        </td>
        <td>
        <%= f.text_field :first_name_kana %>
        <span> (メイ) </span>
        <%= f.text_field :last_name_kana %>
        </td>
        </tr>

        <tr>
        <th>メールアドレス</th>
        <td></td>
        <td><%= f.email_field :email %><td>
        </tr>

        <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
        <th>住所</th>
        <td></td>
        <td><%= f.text_field :address %></td>
        </tr>

        <tr>
        <th>電話番号(ハイフンなし)</th>
        <td></td>
        <td><%= f.phone_field :telephone_number %></td>
        </tr>

        </table>

        <div class="row">
            <div class="col-lg-2">
                <%= f.submit "登録内容を保存する", class: "btn btn-info" %>
            </div>
     <% end %>
            <div class="col-lg-3">
            <%= link_to "退会する", customer_path, class: "btn btn-danger" %>
            </div>
        </div>
    </div>
</div>
