<div class='container' style="margin-top:80px">
  <div class='row'>
    <div class='col-md-11'>
      <p><mark class="bg-light">配送先登録/一覧</></p>

      <%= form_with model:@address,url:public_address_path, local:true do |f| %>
      <div class="form-group row">
        <label class="col-md-4 col-form-label col-form-label-sm">郵便番号(ハイフンなし)</label>
        <div class="col-md-4">
          <%= f.text_field :postal_code, class: 'form-control form-control-sm', placeholder: '0000000' %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-4 col-form-label col-form-label-sm">住所</label>
        <div class="col-md-6">
          <%= f.text_field :address, class: 'form-control form-control-sm', placeholder: '東京都渋⾕区代々⽊神園町0-0' %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-4 col-form-label col-form-label-sm">宛名</label>
        <div class="col-md-4">
          <%= f.text_field :name, class: 'form-control form-control-sm', placeholder: '令和道⼦' %>
        </div>
        <div class="offset-md-2">
          <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>